<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisitaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="6dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="@string/visita_titulo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="@string/notas_preenchimento"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/notas01"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/notas02"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/notas03"/>



        <!-- 1 Organismo proponente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/organismo_titulo"/>


        <EditText
            android:id="@+id/nome_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="@string/nome"
            android:inputType="textCapWords"
            android:maxLength="50" />

        <EditText
            android:id="@+id/morada_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="textCapWords"
            android:hint="@string/morada"/>

        <EditText
            android:id="@+id/pessoa_responsavel_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="textCapWords"
            android:hint="@string/pessoa_responsavel"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/telefone_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:maxLength="15"
                android:inputType="phone"
                android:hint="@string/telefone"/>

            <EditText
                android:id="@+id/telemovel_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:maxLength="15"
                android:inputType="phone"
                android:hint="@string/telemovel"/>

        </LinearLayout>

        <EditText
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:maxLength="50"
            android:inputType="textWebEmailAddress"
            android:hint="@string/email"/>



        <!-- 2.1 Grupo 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/info_visita"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/grupo01"/>


        <EditText
            android:id="@+id/numero_pessoas_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLength="20"
            android:inputType="number"
            android:hint="@string/numero_pessoas"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/data_pretendida_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:inputType="date"
                android:hint="@string/data_pretendida"/>

            <EditText
                android:id="@+id/hora_pretendida_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLength="5"
                android:inputType="time"
                android:hint="@string/hora_pretendida"/>

        </LinearLayout>

        <!-- 2.1 Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="@string/acao_esperada"/>

        <Spinner
            android:id="@+id/spinner_grupo01"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"/>


        <!--  visualizar resultado do spinner 1 -->
        <TextView
            android:id="@+id/mostrar_resultado01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- 2.2 Grupo 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/grupo02"/>


        <EditText
            android:id="@+id/numero_pessoas_grupo2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLength="20"
            android:inputType="number"
            android:hint="@string/numero_pessoas"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/data_pretendida_grupo2_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:inputType="date"
                android:hint="@string/data_pretendida"/>

            <EditText
                android:id="@+id/hora_pretendida_grupo2_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLength="5"
                android:inputType="time"
                android:hint="@string/hora_pretendida"/>

        </LinearLayout>

        <!-- 2.2 Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="@string/acao_esperada"/>

        <Spinner
            android:id="@+id/spinner_grupo02"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" />

        <!--  visualizar resultado do spinner 2 -->
        <TextView
            android:id="@+id/mostrar_resultado02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <!-- 2.3 Grupo 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/grupo03"/>


        <EditText
            android:id="@+id/numero_pessoas_grupo3_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLength="20"
            android:inputType="number"
            android:hint="@string/numero_pessoas"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/data_pretendida_grupo3_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:inputType="date"
                android:hint="@string/data_pretendida"/>

            <EditText
                android:id="@+id/hora_pretendida_grupo3_txt"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLength="5"
                android:inputType="time"
                android:hint="@string/hora_pretendida"/>

        </LinearLayout>

        <!-- 2.3 Spinner 3-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:text="@string/acao_esperada"/>

        <Spinner
            android:id="@+id/spinner_grupo03"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" />

        <!--  visualizar resultado do spinner 3 -->
        <TextView
            android:id="@+id/mostrar_resultado03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- Butao Enviar -->
        <Button
            android:id="@+id/enviar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:onClick="fazerPedidoVisita"
            android:text="@string/enviar_btn" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:textSize="8sp"
            android:text="Arquivo Distrital do Porto"/>


    </LinearLayout>

</ScrollView>